<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="puMainDB" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<non-jta-data-source>jdbc/db</non-jta-data-source>
		<class>org.shovelgame.game.domain.data.Item</class>
		<class>org.shovelgame.game.domain.data.Minion</class>
		<class>org.shovelgame.game.domain.data.Player</class>
		<class>org.shovelgame.game.domain.data.Team</class>
		<class>org.shovelgame.game.domain.i18n.AttributeTypeDescription</class>
		<class>org.shovelgame.game.domain.i18n.EnchantmentTypeDescription</class>
		<class>org.shovelgame.game.domain.i18n.ItemModelDescription</class>
		<class>org.shovelgame.game.domain.i18n.Language</class>
		<class>org.shovelgame.game.domain.i18n.MinionSpecializationDescription</class>
		<class>org.shovelgame.game.domain.i18n.MissionDescription</class>
		<class>org.shovelgame.game.domain.i18n.SeekerSpecializationDescription</class>
		<class>org.shovelgame.game.domain.i18n.SkillDescription</class>
		<class>org.shovelgame.game.domain.i18n.TraitDescription</class>
		<class>org.shovelgame.game.domain.model.AttributeType</class>
		<class>org.shovelgame.game.domain.model.EnchantmentType</class>
		<class>org.shovelgame.game.domain.model.ItemEnchantment</class>
		<class>org.shovelgame.game.domain.model.ItemModel</class>
		<class>org.shovelgame.game.domain.model.MinionAttribute</class>
		<class>org.shovelgame.game.domain.model.MinionModel</class>
		<class>org.shovelgame.game.domain.model.MinionSkill</class>
		<class>org.shovelgame.game.domain.model.MinionSpecialization</class>
		<class>org.shovelgame.game.domain.model.MinionTrait</class>
		<class>org.shovelgame.game.domain.model.Mission</class>
		<class>org.shovelgame.game.domain.model.MissionReward</class>
		<class>org.shovelgame.game.domain.model.SeekerModel</class>
		<class>org.shovelgame.game.domain.model.SeekerSpecialization</class>
		<class>org.shovelgame.game.domain.model.Skill</class>
		<class>org.shovelgame.game.domain.model.Trait</class>
		<class>org.shovelgame.game.domain.model.TraitTarget</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
</persistence>
